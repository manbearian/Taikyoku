<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shogi="clr-namespace:MauiUI"
             x:Name="this"
             x:Class="MauiUI.InfoPanel">
    <Grid>
        <Button Clicked="CloseBtn_Clicked" Opacity="0" HorizontalOptions="Fill" VerticalOptions="Fill"/>
        <shogi:PieceInfoView x:Name="PieceInfoView" Game="{Binding Source={x:Reference this}, Path=Game}"/>
        <shogi:SettingsView x:Name="SettingsView" />
    </Grid>
</ContentView>
