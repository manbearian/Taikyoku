<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shogi="clr-namespace:MauiUI"
             x:Name="this"
             x:Class="MauiUI.PieceInfoView">
    <Grid RowDefinitions="30, 20, *, 20, 15, 15, *" BackgroundColor="White">
        <Label Grid.Row="0" x:Name="titleLabel" Text="Piece info" FontSize="Subtitle" TextColor="Black"/>
        <Label Grid.Row="1" x:Name="subtitleLabel" Text="Piece info" FontSize="Body" TextColor="Black"/>
        <shogi:PieceMoveView Grid.Row="2" x:Name="moveView" 
                             HeightRequest="{Binding Source={RelativeSource Self}, Path=WidthRequest}"
                             PieceId="{Binding Source={x:Reference this}, Path=PieceId}" 
                             BackgroundColor="AntiqueWhite" />
        <Label Grid.Row="3" x:Name="promoLabel" Text="Promotoes to" FontSize="Body" TextColor="Black"/>
        <Label Grid.Row="4" x:Name="promoTitleLabel" Text="Piece info" FontSize="Caption" TextColor="Gray"/>
        <Label Grid.Row="5" x:Name="promoSubtitleLabel" Text="Piece info" FontSize="Caption" TextColor="Gray"/>
        <shogi:PieceMoveView Grid.Row="6" x:Name="promoView"
                             HeightRequest="{Binding Source={RelativeSource Self}, Path=WidthRequest}"
                             BackgroundColor="LightGray" />
    </Grid>

</ContentView>
