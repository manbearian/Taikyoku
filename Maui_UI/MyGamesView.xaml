<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiUI"
             x:Name="this"
             x:Class="MauiUI.MyGamesView">

    <Frame BorderColor="Silver" BackgroundColor="White"
           MaximumWidthRequest="700">
        <ListView
            x:Name="listView"
            SelectionMode="Single"
            ItemsSource="{Binding Source={x:Reference this}, Path=GamesList}" >
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:GameListItem">
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="175" />
                                <ColumnDefinition Width="75" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" TextColor="Black" Text="{Binding OpponentName}"/>
                            <Label Grid.Column="1" TextColor="Black" Text="{Binding Status}"/>
                            <Label Grid.Column="2" TextColor="Black" Text="{Binding LastMove}"/>
                            <Label Grid.Column="3" TextColor="Black" Text="{Binding TurnCount}"/>
                            <Label Grid.Column="4" TextColor="Black" Text="{Binding Details}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Frame>
</ContentView>
