<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shogi="clr-namespace:MauiUI"
             x:Class="MauiUI.BoardPage"
             x:Name="page"
             Title="BoardPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Button x:Name="backBtn" Text="Back" Grid.Row="0" Grid.Column="0" Margin="2" Padding="-2" Clicked="BackBtn_Clicked"></Button>
        <Button x:Name="optionsBtn" Text="Options" Grid.Row="0" Grid.Column="2" Margin="2" Padding="-2" Clicked="OptionsBtn_Clicked"></Button>
        <shogi:BoardView Grid.Row="1" Grid.ColumnSpan="3"  Game="{Binding Source={x:Reference page}, Path=Game}" IsLabeled="True" />
    </Grid>

</ContentPage>