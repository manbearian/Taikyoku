<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiUI.SettingsView">
    <VerticalStackLayout BackgroundColor="Gray" Padding="5">
        <Label Text="Settings"/>
        <VerticalStackLayout Padding="5">
            <HorizontalStackLayout>
                <CheckBox x:Name="RotateOption" CheckedChanged="RotateOption_CheckedChanged" />
                <Label Text="Automatically Rotate Board" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <CheckBox IsEnabled="False"/>
                <Label Text="SecondOption" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <CheckBox IsEnabled="False"/>
                <Label Text="ThirdOption" VerticalTextAlignment="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <VerticalStackLayout Padding="5,20">
            <Button Text="Resign" Margin="5" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentView>
