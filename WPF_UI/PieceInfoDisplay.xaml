<UserControl x:Class="WPF_UI.PieceInfoDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="layoutGrid"
          MinWidth="50"
          MinHeight="100">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="headerText" FontSize="14" />
        <Rectangle Grid.Row="1" Fill="Transparent" Stroke="Black" StrokeThickness="0.1"/>
        <Grid x:Name="moveGrid" Grid.Row="1" ShowGridLines="True"></Grid>
    </Grid>
</UserControl>
