<Window x:Class="WPF_UI.ReconnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="Network Game" SizeToContent="WidthAndHeight" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Closing="Window_Closing" SourceInitialized="Window_SourceInitialized">
    <Grid Height="80" Width="160">
        <TextBlock Text="Connecting..." FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />
        <Button x:Name="CancelButton" Content="Cancel" Height="24" Width="80" Margin="0,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" AutomationProperties.Name="" IsCancel="True" IsDefault="True" Click="CancelButton_Click" />
    </Grid>
</Window>
